# Universal Opportunity Analyzer Agent - Environment Configuration
# Скопируйте этот файл как .env и заполните необходимые значения

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ LLM
# =============================================================================

# Qwen API (основной провайдер)
LLM_API_KEY=your_qwen_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen2.5-coder-32b-instruct
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8192

# Альтернативные провайдеры (опционально)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# КОНФИГУРАЦИЯ ДОМЕНА И ПРОЕКТА
# =============================================================================

# Тип домена: psychology, astrology, numerology, business, education, etc.
DOMAIN_TYPE=psychology

# Тип проекта: transformation_platform, educational_system, consultation_platform, etc.
PROJECT_TYPE=transformation_platform

# Технологический фреймворк: pydantic_ai, fastapi, django, etc.
FRAMEWORK=pydantic_ai

# =============================================================================
# НАСТРОЙКИ АНАЛИЗА ВОЗМОЖНОСТЕЙ
# =============================================================================

# Глубина анализа: surface, comprehensive, deep
ANALYSIS_DEPTH=comprehensive

# Географический охват: local, regional, global
MARKET_SCOPE=regional

# Временной горизонт: short_term, medium_term, long_term
TIME_HORIZON=medium_term

# Включить анализ конкурентов: true/false
COMPETITION_ANALYSIS=true

# Включить оценку рисков: true/false
RISK_ASSESSMENT=true

# =============================================================================
# RAG И БАЗА ЗНАНИЙ
# =============================================================================

# URL Archon Knowledge Base
KNOWLEDGE_BASE_URL=http://localhost:3737

# Домен источника знаний (опционально)
KNOWLEDGE_DOMAIN=

# =============================================================================
# ARCHON ИНТЕГРАЦИЯ
# =============================================================================

# ID проекта в Archon (AI Agent Factory)
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# Включить делегирование задач: true/false
ENABLE_TASK_DELEGATION=true

# Порог для делегирования: low, medium, high
DELEGATION_THRESHOLD=medium

# =============================================================================
# ЛОКАЛИЗАЦИЯ
# =============================================================================

# Основной язык: ukrainian, polish, english
PRIMARY_LANGUAGE=ukrainian

# Целевые рынки (через запятую)
TARGET_MARKETS=ukraine,poland

# =============================================================================
# ЛИМИТЫ И ПРОИЗВОДИТЕЛЬНОСТЬ
# =============================================================================

# Тайм-аут анализа в секундах
ANALYSIS_TIMEOUT=300

# Максимальное количество возможностей за анализ
MAX_OPPORTUNITIES=10

# Максимальное количество болевых точек за анализ
MAX_PAIN_POINTS=15

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Сохранять логи анализа: true/false
SAVE_ANALYSIS_LOGS=true

# Путь к файлу логов
ANALYSIS_LOG_PATH=logs/opportunity_analysis.log

# =============================================================================
# РЕЖИМ РАЗРАБОТКИ
# =============================================================================

# Режим отладки: true/false
DEBUG_MODE=false

# =============================================================================
# ЭКСПЕРИМЕНТАЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Включить AI скоринг: true/false
ENABLE_AI_SCORING=true

# Включить кросс-доменный анализ: true/false
ENABLE_CROSS_DOMAIN_ANALYSIS=false

# Включить предиктивную аналитику: true/false
ENABLE_PREDICTIVE_ANALYTICS=false

# =============================================================================
# ПРИМЕРЫ КОНФИГУРАЦИЙ ДЛЯ РАЗНЫХ ДОМЕНОВ
# =============================================================================

# Для психологии:
