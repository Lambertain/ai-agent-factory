# UI/UX Enhancement Agent Environment Variables

# ===== REQUIRED API KEYS =====

# Qwen/Alibaba Cloud API (for technical analysis)
LLM_API_KEY=your_dashscope_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Google Gemini API (for creative UI/UX analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== UI/UX AGENT SPECIFIC SETTINGS =====

# Design system configuration
UIUX_DESIGN_SYSTEM=shadcn/ui
UIUX_CSS_FRAMEWORK=tailwind
UIUX_COMPONENT_LIBRARY_VERSION=latest

# Accessibility settings
UIUX_WCAG_COMPLIANCE_LEVEL=AA
UIUX_ACCESSIBILITY_TOOLS=axe-core,lighthouse,wave

# Performance budgets (in milliseconds/KB)
UIUX_PERFORMANCE_BUDGET_FCP=1500
UIUX_PERFORMANCE_BUDGET_CLS=0.1
UIUX_PERFORMANCE_BUDGET_TBT=300
UIUX_PERFORMANCE_BUDGET_BUNDLE_SIZE=100

# ===== TOOL INTEGRATIONS =====

# Puppeteer for visual testing
UIUX_PUPPETEER_ENABLED=true
UIUX_PUPPETEER_HEADLESS=true

# Figma integration (optional)
UIUX_FIGMA_API_KEY=your_figma_api_key_here
UIUX_FIGMA_INTEGRATION_ENABLED=false

# Storybook integration
UIUX_STORYBOOK_INTEGRATION=true
UIUX_STORYBOOK_BASE_URL=http://localhost:6006

# ===== ARCHON RAG INTEGRATION =====

# Archon Knowledge Base
UIUX_ARCHON_API_URL=http://localhost:3737
UIUX_ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# ===== COST OPTIMIZATION =====

# Smart routing and caching
UIUX_ENABLE_SMART_ROUTING=true
UIUX_AUTO_COMPRESS_PROMPTS=true
UIUX_CACHE_RESPONSES=true

# Rate limiting
UIUX_RATE_LIMIT_REQUESTS_PER_MINUTE=60
UIUX_RATE_LIMIT_TOKENS_PER_MINUTE=100000

# Batch processing
UIUX_ENABLE_BATCH_PROCESSING=true
UIUX_BATCH_SIZE=5

# Gemini cost optimization
UIUX_GEMINI_USE_BATCH_API=true

# ===== PROJECT SPECIFIC =====

# Universal project color palette (hex values)
UIUX_PROJECT_PRIMARY=#3B82F6
UIUX_PROJECT_SECONDARY=#10B981
UIUX_PROJECT_ACCENT=#8B5CF6
UIUX_PROJECT_WARNING=#F59E0B
UIUX_PROJECT_ERROR=#EF4444
UIUX_PROJECT_SUCCESS=#22C55E
UIUX_PROJECT_INFO=#06B6D4

# Animation settings
UIUX_ANIMATION_DURATION_FAST=150ms
UIUX_ANIMATION_DURATION_NORMAL=300ms
UIUX_ANIMATION_DURATION_SLOW=500ms
UIUX_ANIMATION_EASING=cubic-bezier(0.4, 0, 0.2, 1)
UIUX_ANIMATION_RESPECT_REDUCED_MOTION=true