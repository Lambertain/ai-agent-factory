# === НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ ===
MAX_TOKENS=4096
TEMPERATURE=0.4
REQUEST_TIMEOUT=120
RETRY_ATTEMPTS=3

# === ВЕСОВЫЕ КОЭФФИЦИЕНТЫ ДЛЯ МАППИНГА ===
PATTERN_SCORING_WEIGHTS=relevance:0.25,applicability:0.20,effectiveness:0.20,feasibility:0.15,scalability:0.10,maintainability:0.10
SOLUTION_QUALITY_WEIGHTS=technical_quality:0.30,domain_fit:0.25,implementation_ease:0.20,innovation:0.15,risk_level:0.10

# === ДОМЕННО-СПЕЦИФИЧНЫЕ НАСТРОЙКИ ===
# Психология
