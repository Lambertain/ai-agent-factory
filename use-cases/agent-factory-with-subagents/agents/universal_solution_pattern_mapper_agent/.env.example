# === ОСНОВНЫЕ НАСТРОЙКИ ===
LLM_API_KEY=your_api_key_here
PROJECT_PATH=

# === КОНФИГУРАЦИЯ ДОМЕНА ===
# Поддерживаемые домены: psychology, astrology, numerology, business
DOMAIN_TYPE=psychology
PROJECT_TYPE=transformation_platform
FRAMEWORK=pydantic_ai

# === НАСТРОЙКИ МАППИНГА ПАТТЕРНОВ ===
# Сложность паттернов: simple, comprehensive, advanced
PATTERN_COMPLEXITY=comprehensive

# Охват решений: universal, domain_specific, project_specific
SOLUTION_SCOPE=domain_specific

# Уровень валидации: basic, standard, rigorous
VALIDATION_LEVEL=standard

# Режим адаптации: manual, automatic, hybrid
ADAPTATION_MODE=automatic

# === ВРЕМЕННЫЕ И КОНТЕКСТНЫЕ ПАРАМЕТРЫ ===
# Временные рамки: short_term, medium_term, long_term
SOLUTION_TIMELINE=medium_term

# Контекст реализации: prototype, development, production
IMPLEMENTATION_CONTEXT=production

# === ЛОКАЛИЗАЦИЯ ===
PRIMARY_LANGUAGE=ukrainian
SECONDARY_LANGUAGES=polish,english
TARGET_REGIONS=ukraine,poland

# === RAG И KNOWLEDGE BASE ===
AGENT_NAME=universal_solution_pattern_mapper
KNOWLEDGE_TAGS=solution-patterns,pattern-mapping,agent-knowledge,pydantic-ai
KNOWLEDGE_DOMAIN=
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# === МЕЖАГЕНТНОЕ ВЗАИМОДЕЙСТВИЕ ===
ENABLE_TASK_DELEGATION=true
DELEGATION_THRESHOLD=medium
MAX_DELEGATION_DEPTH=3

# === LLM ПРОВАЙДЕРЫ И МОДЕЛИ ===
LLM_PROVIDER=qwen
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Модели для разных типов задач маппинга
LLM_PATTERN_MAPPING_MODEL=qwen2.5:14b
