# Universal Analytics & Tracking Agent Configuration

# ====================
# ОСНОВНЫЕ НАСТРОЙКИ LLM
# ====================

# API ключ для LLM провайдера (обязательно)
LLM_API_KEY=your-api-key-here

# Провайдер LLM (openai, anthropic, azure)
LLM_PROVIDER=openai

# Модель LLM для использования
LLM_MODEL=qwen2.5-coder-32b-instruct

# Базовый URL для API (для совместимых с OpenAI провайдеров)
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ====================
# КОНФИГУРАЦИЯ ПРОЕКТА
# ====================

# Тип проекта (web_analytics, ecommerce_tracking, saas_metrics, mobile_analytics, content_analytics, blog_analytics)
PROJECT_TYPE=web_analytics

# Домен проекта (analytics, tracking, experimentation, performance)
DOMAIN_TYPE=analytics

# Фокус трекинга (conversion, engagement, retention, revenue, user_journey)
TRACKING_FOCUS=conversion

# ====================
# GOOGLE ANALYTICS 4
# ====================

# Google Analytics 4 Measurement ID (формат: G-XXXXXXXXXX)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# GA4 Measurement Protocol API Secret
GA4_API_SECRET=your-ga4-api-secret

# Universal Analytics ID (если используется, формат: UA-XXXXXXX-X)
UNIVERSAL_ANALYTICS_ID=UA-XXXXXXX-X

# ====================
# MIXPANEL
# ====================

# Mixpanel Project Token
MIXPANEL_TOKEN=your-mixpanel-project-token

# Mixpanel API Key
MIXPANEL_API_KEY=your-mixpanel-api-key

# Mixpanel API Secret (для server-side tracking)
MIXPANEL_API_SECRET=your-mixpanel-api-secret

# ====================
# AMPLITUDE
# ====================

# Amplitude API Key
AMPLITUDE_API_KEY=your-amplitude-api-key

# Amplitude Secret Key
AMPLITUDE_SECRET_KEY=your-amplitude-secret-key

# ====================
# SEGMENT CDP
# ====================

# Segment Write Key
SEGMENT_WRITE_KEY=your-segment-write-key

# ====================
# A/B TESTING PLATFORMS
# ====================

# Optimizely SDK Key
OPTIMIZELY_SDK_KEY=your-optimizely-sdk-key

# Google Optimize Container ID
GOOGLE_OPTIMIZE_ID=GTM-XXXXXXX

# VWO Account ID
VWO_ACCOUNT_ID=your-vwo-account-id

# ====================
# HOTJAR
# ====================

# Hotjar Site ID
HOTJAR_SITE_ID=your-hotjar-site-id

# ====================
# PRIVACY И COMPLIANCE
# ====================

# GDPR compliance (true/false)
GDPR_COMPLIANCE=true

# CCPA compliance (true/false)
CCPA_COMPLIANCE=true

# Anonymize IP addresses (true/false)
ANONYMIZE_IP=true

# Require cookie consent (true/false)
COOKIE_CONSENT_REQUIRED=true

# ====================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ====================

# Включить батчевую отправку событий (true/false)
ENABLE_BATCH_EVENTS=true

# Размер батча событий
BATCH_SIZE=50

# Интервал отправки батчей в миллисекундах
FLUSH_INTERVAL=5000

# ====================
# ДАШБОРД И ОТЧЕТЫ
# ====================

# Включить real-time dashboard (true/false)
ENABLE_REALTIME_DASHBOARD=false

# Интервал обновления dashboard в миллисекундах
DASHBOARD_UPDATE_INTERVAL=30000

# ====================
# ФУНКЦИИ ПО ТИПУ ПРОЕКТА
# ====================

# E-commerce трекинг (true/false)
ENABLE_ECOMMERCE_TRACKING=false

# Контент трекинг (true/false)
ENABLE_CONTENT_TRACKING=false

# User journey mapping (true/false)
ENABLE_USER_JOURNEY_MAPPING=false

# Cohort анализ (true/false)
ENABLE_COHORT_ANALYSIS=false

# ====================
# CUSTOM EVENTS
# ====================

# Кастомные события (true/false)
CUSTOM_EVENTS_ENABLED=true

# Максимум custom параметров на событие
MAX_CUSTOM_PARAMETERS=25

# ====================
# API ENDPOINTS
# ====================

# Base URL для Analytics Reporting API
ANALYTICS_API_BASE_URL=https://analyticsreporting.googleapis.com/v4

# ====================
# ARCHON INTEGRATION
# ====================

# Archon Project ID для межагентного взаимодействия
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a