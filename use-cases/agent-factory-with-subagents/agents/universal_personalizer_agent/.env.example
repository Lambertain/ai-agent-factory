# ===================================================================
# Universal Personalizer Agent - Конфигурация
# ===================================================================

# === ОСНОВНЫЕ НАСТРОЙКИ ===
LLM_API_KEY=your_api_key_here
PROJECT_PATH=

# === КОНФИГУРАЦИЯ ДОМЕНА ===
# Поддерживаемые домены: psychology, astrology, numerology, business
DOMAIN_TYPE=psychology
PROJECT_TYPE=transformation_platform
FRAMEWORK=pydantic_ai

# === НАСТРОЙКИ ПЕРСОНАЛИЗАЦИИ ===
# Режим персонализации: adaptive, rule_based, ml_driven, hybrid
PERSONALIZATION_MODE=adaptive

# Глубина персонализации: basic, comprehensive, deep
PERSONALIZATION_DEPTH=comprehensive

# Стратегия адаптации: static, dynamic, predictive
ADAPTATION_STRATEGY=dynamic

# Подход к обучению: behavioral, preference_based, contextual, hybrid
LEARNING_APPROACH=behavioral

# === АЛГОРИТМЫ ПЕРСОНАЛИЗАЦИИ ===
# Алгоритм рекомендаций: collaborative, content_based, hybrid, ml
RECOMMENDATION_ALGORITHM=hybrid
SIMILARITY_THRESHOLD=0.7
MIN_INTERACTION_COUNT=5
PERSONALIZATION_CONFIDENCE_THRESHOLD=0.6

# === ПОЛЬЗОВАТЕЛЬСКАЯ СЕГМЕНТАЦИЯ ===
# Метод сегментации: demographic, behavioral, psychographic, hybrid
USER_SEGMENTATION=behavioral
SEGMENT_UPDATE_FREQUENCY=weekly
MAX_SEGMENTS_PER_USER=3

# === АДАПТАЦИЯ КОНТЕНТА ===
# Уровень адаптации: basic, comprehensive, advanced
CONTENT_ADAPTATION=comprehensive
REAL_TIME_OPTIMIZATION=true
A_B_TESTING_ENABLED=true
CONTENT_FRESHNESS_WEIGHT=0.3

# === ПРИВАТНОСТЬ И БЕЗОПАСНОСТЬ ===
# Уровень защиты: basic, medium, high, maximum
PRIVACY_PROTECTION_LEVEL=high
DATA_ANONYMIZATION=true
CONSENT_MANAGEMENT=true
DATA_RETENTION_DAYS=365

# === ВРЕМЕННЫЕ ПАРАМЕТРЫ ===
# Временные рамки: immediate, short_term, long_term
PERSONALIZATION_TIMELINE=immediate

# Контекстная осведомленность: minimal, partial, full
CONTEXT_AWARENESS=full
SESSION_TIMEOUT_MINUTES=30

# === КУЛЬТУРНАЯ АДАПТАЦИЯ ===
CULTURAL_ADAPTATION=true
PRIMARY_LANGUAGE=ukrainian
SECONDARY_LANGUAGES=polish,english
TARGET_REGIONS=ukraine,poland

# === RAG И KNOWLEDGE BASE ===
AGENT_NAME=universal_personalizer
KNOWLEDGE_TAGS=personalization,user-experience,agent-knowledge,pydantic-ai
KNOWLEDGE_DOMAIN=
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# === МЕЖАГЕНТНОЕ ВЗАИМОДЕЙСТВИЕ ===
ENABLE_TASK_DELEGATION=true
DELEGATION_THRESHOLD=medium
MAX_DELEGATION_DEPTH=3

# === LLM ПРОВАЙДЕРЫ И МОДЕЛИ ===
LLM_PROVIDER=qwen
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Модели для разных типов задач персонализации
LLM_USER_PROFILING_MODEL=qwen2.5:7b
LLM_CONTENT_GENERATION_MODEL=qwen2.5:14b
LLM_UX_OPTIMIZATION_MODEL=qwen2.5:14b
LLM_EFFECTIVENESS_ANALYSIS_MODEL=qwen2.5:7b

# Альтернативные API ключи (опционально)
GEMINI_API_KEY=
OPENAI_API_KEY=
CLAUDE_API_KEY=

# === НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ ===
MAX_TOKENS=4096
TEMPERATURE=0.4
REQUEST_TIMEOUT=120
RETRY_ATTEMPTS=3

# === ВЕСОВЫЕ КОЭФФИЦИЕНТЫ ===
PERSONALIZATION_WEIGHTS=relevance:0.25,engagement:0.20,satisfaction:0.20,effectiveness:0.15,accuracy:0.10,usability:0.10
USER_FEEDBACK_WEIGHT=0.4
BEHAVIORAL_DATA_WEIGHT=0.6

# === ДОМЕННО-СПЕЦИФИЧНЫЕ ФАКТОРЫ ПЕРСОНАЛИЗАЦИИ ===
# Психология
PSYCHOLOGY_PERSONALIZATION_FACTORS=personality_traits,therapeutic_goals,cultural_background,psychological_state

# Астрология
ASTROLOGY_PERSONALIZATION_FACTORS=birth_chart_data,cultural_tradition,experience_level,spiritual_orientation

# Нумерология
NUMEROLOGY_PERSONALIZATION_FACTORS=core_numbers,life_path,cultural_context,application_purpose

# Бизнес
BUSINESS_PERSONALIZATION_FACTORS=industry_sector,company_size,role_level,business_goals

# === МЕТРИКИ КАЧЕСТВА ===
MIN_PERSONALIZATION_QUALITY=0.7
TARGET_USER_SATISFACTION=0.85
MAX_PERSONALIZATION_ERROR_RATE=0.05

# === ОТЛАДКА И ЛОГИРОВАНИЕ ===
DEBUG_MODE=false
LOG_LEVEL=INFO
SAVE_PERSONALIZATION_LOGS=true
PERSONALIZATION_OUTPUT_FORMAT=json

