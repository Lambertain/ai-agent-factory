# Performance Optimization Agent Environment Variables

# ===== REQUIRED API KEYS =====

# Qwen/Alibaba Cloud API (for performance analysis)
LLM_API_KEY=your_dashscope_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen2.5-coder-32b-instruct

# Google Gemini API (for cost-optimized monitoring)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== SPECIALIZED MODELS (Cost-Optimized) =====

# Deep analysis model (premium)
LLM_ANALYSIS_MODEL=qwen2.5-72b-instruct

# Monitoring model (economical)
LLM_MONITORING_MODEL=gemini-2.5-flash-lite

# Code profiling model
LLM_PROFILING_MODEL=qwen2.5-coder-32b-instruct

# Cost optimization settings
GEMINI_USE_BATCH_API=true
QWEN_ENABLE_CONTEXT_CACHE=true
ENABLE_SMART_ROUTING=true

# ===== PERFORMANCE AGENT SPECIFIC SETTINGS =====

# Project configuration (универсальные настройки)
DOMAIN_TYPE=web_application
PROJECT_TYPE=full_stack
FRAMEWORK=react
PERFORMANCE_FOCUS=balanced

# Optimization features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_MONITORING=true
ENABLE_LAZY_LOADING=true
ENABLE_BUNDLING=true
ENABLE_CDN=true
ENABLE_DATABASE_OPTIMIZATION=true

# Performance targets
TARGET_RESPONSE_TIME_MS=200
TARGET_THROUGHPUT_RPS=1000
TARGET_ERROR_RATE=0.001

# ===== ARCHON RAG INTEGRATION =====

# Archon Knowledge Base
ARCHON_API_URL=http://localhost:3737
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# ===== UNIVERSAL PROJECT SETTINGS =====

# Color scheme and UI settings
PERFORMANCE_COLOR_SCHEME=modern_blue
PRIMARY_COLOR=#3B82F6
SUCCESS_COLOR=#10B981
ACCENT_COLOR=#8B5CF6
WARNING_COLOR=#F59E0B
ERROR_COLOR=#EF4444

# Context7 MCP Integration (для больших проектов)
ENABLE_CONTEXT7_MCP=true
CONTEXT7_MAX_CONTEXT_SIZE=100000

# Knowledge Base
KNOWLEDGE_BASE_ENABLED=true
RAG_SEARCH_THRESHOLD=0.75

# ===== DOMAIN-SPECIFIC CONFIGURATIONS =====

# Frontend optimization settings
FRONTEND_BUNDLE_OPTIMIZATION=true
FRONTEND_LAZY_LOADING=true
FRONTEND_IMAGE_OPTIMIZATION=true
FRONTEND_CSS_OPTIMIZATION=true

# Backend optimization settings
BACKEND_RESPONSE_CACHING=true
BACKEND_COMPRESSION=true
BACKEND_CONNECTION_POOLING=true
BACKEND_QUERY_OPTIMIZATION=true

# Database optimization settings
DATABASE_QUERY_OPTIMIZATION=true
DATABASE_INDEXING=true
DATABASE_CONNECTION_POOLING=true
DATABASE_QUERY_CACHING=true

# ===== MONITORING CONFIGURATION =====

# Real-time monitoring
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ALERTING=true
ALERT_THRESHOLD_MULTIPLIER=1.5

# Performance thresholds
TARGET_CPU_USAGE=0.7
TARGET_MEMORY_USAGE=0.8

# ===== FRAMEWORK-SPECIFIC SETTINGS =====

# React optimization
REACT_CODE_SPLITTING=true
REACT_MEMO_OPTIMIZATION=true
REACT_BUNDLE_ANALYSIS=true

# Vue optimization
VUE_TREE_SHAKING=true
VUE_ASYNC_COMPONENTS=true
VUE_PERFORMANCE_DEVTOOLS=true

# FastAPI optimization
FASTAPI_ASYNC_OPTIMIZATION=true
FASTAPI_DEPENDENCY_INJECTION=true
FASTAPI_RESPONSE_MODELS=true

# Django optimization
DJANGO_QUERY_OPTIMIZATION=true
DJANGO_TEMPLATE_CACHING=true
DJANGO_STATIC_FILES_OPTIMIZATION=true

# Express optimization
EXPRESS_MIDDLEWARE_OPTIMIZATION=true
EXPRESS_ASYNC_HANDLERS=true
EXPRESS_CLUSTERING=true

# ===== ANALYSIS CONFIGURATION =====

# Analysis scope
ANALYZE_PROJECT_STRUCTURE=true
ANALYZE_DEPENDENCIES=true
ANALYZE_STATIC_ASSETS=true
ANALYZE_SYSTEM_RESOURCES=true

# Optimization scope
OPTIMIZE_BUNDLE=true
OPTIMIZE_CACHING=true
OPTIMIZE_COMPRESSION=true
OPTIMIZE_DATABASE=true
OPTIMIZE_IMAGES=true

# ===== REPORTING SETTINGS =====

# Report generation
INCLUDE_RECOMMENDATIONS=true
INCLUDE_SYSTEM_INFO=true
INCLUDE_PERFORMANCE_TARGETS=true
INCLUDE_OPTIMIZATION_STRATEGIES=true

# Report format
REPORT_FORMAT=json
REPORT_INCLUDE_CHARTS=false
REPORT_DETAILED_ANALYSIS=true