# API Development Agent Environment Configuration

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# Primary LLM Provider Settings
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen2.5-coder-32b-instruct

# Cost-optimized model configuration for different tasks
LLM_CODING_MODEL=qwen2.5-coder-32b-instruct
LLM_ANALYSIS_MODEL=qwen2.5-72b-instruct
LLM_DOCS_MODEL=gemini-2.5-flash-lite

# Alternative provider for cost-effective tasks
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Agent Configuration
# =============================================================================

# Agent Identity
AGENT_NAME=API Development Agent
AGENT_VERSION=1.0.0

# Default Project Settings
DEFAULT_FRAMEWORK=express
DEFAULT_DOMAIN=general
DEFAULT_LANGUAGE=typescript

# =============================================================================
# RAG and Knowledge Base
# =============================================================================

# Archon Knowledge Base Integration
ARCHON_URL=http://localhost:3737
KNOWLEDGE_BASE_ENABLED=true

# =============================================================================
# Performance Settings
# =============================================================================

# LLM Performance
MAX_RETRIES=3
TIMEOUT_SECONDS=60
ENABLE_CACHING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# =============================================================================
# Development Settings
# =============================================================================

# Debug and Logging
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_VERBOSE_LOGGING=false

# Development Features
HOT_RELOAD=true
AUTO_SAVE=true

# =============================================================================
# Security Settings
# =============================================================================

# Input Validation
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=10000
SANITIZE_INPUTS=true

# Security Defaults
DEFAULT_AUTH_STRATEGY=jwt
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# Primary Database
DATABASE_URL=postgresql://user:password@localhost:5432/api_db
DATABASE_TYPE=postgresql

# Redis for Caching
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# API Generation Settings
# =============================================================================

# Default Features
INCLUDE_TESTS=true
INCLUDE_DOCS=true
INCLUDE_SECURITY=true
INCLUDE_PERFORMANCE_OPTIMIZATION=true

# Documentation
DEFAULT_DOCUMENTATION_TYPE=openapi
INCLUDE_EXAMPLES=true
INCLUDE_CURL_EXAMPLES=true

# Testing
DEFAULT_TESTING_FRAMEWORK=jest
INCLUDE_INTEGRATION_TESTS=true
INCLUDE_SECURITY_TESTS=true
INCLUDE_PERFORMANCE_TESTS=true

# =============================================================================
# Domain-Specific Settings
# =============================================================================

# E-commerce Defaults
ECOMMERCE_PAYMENT_PROVIDER=stripe
ECOMMERCE_ENABLE_INVENTORY=true
ECOMMERCE_ENABLE_REVIEWS=true

# Fintech Defaults
FINTECH_COMPLIANCE_LEVEL=pci-dss
FINTECH_ENABLE_FRAUD_DETECTION=true
FINTECH_AUDIT_LEVEL=comprehensive

# Healthcare Defaults
HEALTHCARE_COMPLIANCE_LEVEL=hipaa
HEALTHCARE_ENABLE_PHI_ENCRYPTION=true
HEALTHCARE_FHIR_VERSION=r4

# Social Media Defaults
SOCIAL_ENABLE_REAL_TIME=true
SOCIAL_CONTENT_MODERATION=automatic
SOCIAL_ENABLE_ANALYTICS=true

# Gaming Defaults
GAMING_ENABLE_REAL_TIME=true
GAMING_ANTI_CHEAT=enabled
GAMING_ANALYTICS=comprehensive

# Enterprise Defaults
ENTERPRISE_SSO_PROVIDER=okta
ENTERPRISE_RBAC_ENABLED=true
ENTERPRISE_AUDIT_LOGGING=comprehensive

# =============================================================================
# Framework-Specific Settings
# =============================================================================

# Express.js
EXPRESS_USE_TYPESCRIPT=true
EXPRESS_DEFAULT_ORM=prisma
EXPRESS_ENABLE_CORS=true

# NestJS
NESTJS_ARCHITECTURE=clean-architecture
NESTJS_DEFAULT_ORM=typeorm
NESTJS_ENABLE_MICROSERVICES=false

# FastAPI
FASTAPI_ENABLE_ASYNC=true
FASTAPI_DEFAULT_ORM=sqlalchemy
FASTAPI_AUTO_DOCS=true

# Django REST
DJANGO_ADMIN_ENABLED=true
DJANGO_DEFAULT_ORM=django-orm
DJANGO_ENABLE_SIGNALS=true

# ASP.NET Core
ASPNET_USE_MINIMAL_API=false
ASPNET_DEFAULT_ORM=entity-framework
ASPNET_ENABLE_SWAGGER=true

# Spring Boot
SPRING_BOOT_ACTUATOR=true
SPRING_BOOT_DEFAULT_ORM=hibernate
SPRING_BOOT_ENABLE_SECURITY=true

# =============================================================================
# Deployment Settings
# =============================================================================

# Container Configuration
DOCKER_BASE_IMAGE=node:18-alpine
DOCKER_ENABLE_MULTI_STAGE=true
DOCKER_ENABLE_SECURITY_SCANNING=true

# Kubernetes
K8S_ENABLE_HEALTH_CHECKS=true
K8S_ENABLE_MONITORING=true
K8S_DEFAULT_REPLICAS=3

# CI/CD
ENABLE_GITHUB_ACTIONS=true
ENABLE_DOCKER_BUILD=true
ENABLE_SECURITY_SCANNING=true

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Metrics
METRICS_PROVIDER=prometheus
ENABLE_CUSTOM_METRICS=true

# Logging
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# Tracing
TRACING_PROVIDER=jaeger
ENABLE_DISTRIBUTED_TRACING=false

# =============================================================================
# Integration Settings
# =============================================================================

# External Services
EMAIL_PROVIDER=sendgrid
FILE_STORAGE_PROVIDER=aws-s3
SEARCH_PROVIDER=elasticsearch

# Payment Processing
PAYMENT_PROVIDERS=stripe,paypal
ENABLE_WEBHOOK_VALIDATION=true

# Notification Services
PUSH_NOTIFICATION_PROVIDER=firebase
SMS_PROVIDER=twilio

# =============================================================================
# Development Environment
# =============================================================================

# Environment
NODE_ENV=development
PYTHON_ENV=development
ENVIRONMENT=development

# Project Paths
PROJECT_ROOT=/path/to/your/project
OUTPUT_DIRECTORY=./generated
BACKUP_DIRECTORY=./backups

# =============================================================================
# Advanced Configuration
# =============================================================================

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_AI_CODE_REVIEW=true
ENABLE_AUTO_OPTIMIZATION=false

# Performance Optimization
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_RESPONSE_CACHING=true

# Security Advanced
ENABLE_PENETRATION_TESTING=false
ENABLE_VULNERABILITY_SCANNING=true
ENABLE_COMPLIANCE_CHECKING=true