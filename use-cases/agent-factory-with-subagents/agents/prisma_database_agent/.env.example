# Prisma Database Agent Environment Variables

# ===== LLM CONFIGURATION =====
# Qwen API (via DashScope)
LLM_API_KEY=your_qwen_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# ===== MODEL SELECTION =====
# Database architecture analysis (complex tasks)
LLM_ARCHITECTURE_MODEL=qwen2.5-72b-instruct

# SQL generation and optimization
LLM_CODING_MODEL=qwen2.5-coder-32b-instruct

# Migration planning and documentation (cheap)
LLM_PLANNING_MODEL=gemini-2.5-flash-lite
LLM_VALIDATION_MODEL=gemini-2.5-flash-lite

# ===== DATABASE SETTINGS =====
# PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/your_database

# Prisma configuration
PRISMA_SCHEMA_PATH=prisma/schema.prisma
PRISMA_MIGRATION_PATH=prisma/migrations

# Performance settings
SLOW_QUERY_THRESHOLD_MS=1000.0
MAX_QUERY_COMPLEXITY=10
CONNECTION_POOL_SIZE=10

# ===== PROJECT PATHS =====
PROJECT_ROOT=.
BACKUP_DIRECTORY=backups/database

# ===== ARCHON INTEGRATION =====
ARCHON_URL=http://localhost:3737
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# ===== OPTIMIZATION =====
ENABLE_QUERY_CACHE=true
ENABLE_CONNECTION_POOLING=true
ENABLE_PREPARED_STATEMENTS=true
AUTO_ANALYZE_SCHEMA=true
GENERATE_MIGRATION_BACKUPS=true

# ===== LOGGING & MONITORING =====
ENABLE_QUERY_LOGGING=true
LOG_SLOW_QUERIES=true
ENABLE_PERFORMANCE_MONITORING=true