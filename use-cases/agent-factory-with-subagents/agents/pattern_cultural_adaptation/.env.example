# Pattern Cultural Adaptation Expert Agent Environment Variables

# LLM Configuration
CULTURAL_ADAPTATION_LLM_PROVIDER=openai
CULTURAL_ADAPTATION_LLM_API_KEY=your_api_key_here
CULTURAL_ADAPTATION_LLM_MODEL=qwen2.5-coder-32b-instruct
CULTURAL_ADAPTATION_LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Specialized models
CULTURAL_ADAPTATION_LLM_ANALYSIS_MODEL=qwen2.5-72b-instruct
CULTURAL_ADAPTATION_LLM_VALIDATION_MODEL=gemini-2.5-flash-lite

# Agent Configuration
CULTURAL_ADAPTATION_AGENT_NAME=pattern_cultural_adaptation_expert
CULTURAL_ADAPTATION_AGENT_VERSION=1.0.0

# Cultural Settings
CULTURAL_ADAPTATION_DEFAULT_TARGET_CULTURE=universal
CULTURAL_ADAPTATION_SUPPORTED_CULTURES=ukrainian,polish,english,german,universal

# Adaptation Settings
CULTURAL_ADAPTATION_DEFAULT_ADAPTATION_DEPTH=moderate
CULTURAL_ADAPTATION_CULTURAL_SAFETY_CHECKS=true
CULTURAL_ADAPTATION_AVOID_STEREOTYPES=true
CULTURAL_ADAPTATION_RELIGIOUS_SENSITIVITY_MODE=true

# Quality Settings
CULTURAL_ADAPTATION_QUALITY_THRESHOLD=0.8
CULTURAL_ADAPTATION_EXPERT_VALIDATION_REQUIRED=false
CULTURAL_ADAPTATION_A_B_TESTING_ENABLED=false

# RAG and Knowledge Base
CULTURAL_ADAPTATION_ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a
CULTURAL_ADAPTATION_KNOWLEDGE_DOMAIN=cultural_psychology
CULTURAL_ADAPTATION_KNOWLEDGE_TAGS=cultural_adaptation,cross_cultural_psychology,agent_knowledge,pydantic_ai

# Performance Settings
CULTURAL_ADAPTATION_MAX_CONCURRENT_ADAPTATIONS=3
CULTURAL_ADAPTATION_ADAPTATION_TIMEOUT=300
CULTURAL_ADAPTATION_CACHE_ADAPTATIONS=true

# Logging and Monitoring
CULTURAL_ADAPTATION_LOG_LEVEL=INFO
CULTURAL_ADAPTATION_TRACK_ADAPTATION_METRICS=true
CULTURAL_ADAPTATION_CULTURAL_ACCEPTANCE_TRACKING=true

# Language Settings
CULTURAL_ADAPTATION_DEFAULT_LANGUAGE=ru
CULTURAL_ADAPTATION_SUPPORTED_LANGUAGES=ru,uk,pl,en,de

# Regional Settings
CULTURAL_ADAPTATION_TIMEZONE=Europe/Kiev
CULTURAL_ADAPTATION_DATE_FORMAT=%d.%m.%Y
CULTURAL_ADAPTATION_CULTURAL_CALENDAR=gregorian

# Security and Privacy
CULTURAL_ADAPTATION_ANONYMIZE_EXAMPLES=true
CULTURAL_ADAPTATION_GDPR_COMPLIANCE=true
CULTURAL_ADAPTATION_DATA_RETENTION_DAYS=90

# External Integrations
CULTURAL_ADAPTATION_ENABLE_EXTERNAL_VALIDATION=false
CULTURAL_ADAPTATION_CULTURAL_EXPERT_API_KEY=optional_expert_api_key