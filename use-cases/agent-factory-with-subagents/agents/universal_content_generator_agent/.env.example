# ===================================================================
# Universal Content Generator Agent - Конфигурация
# ===================================================================

# === ОСНОВНЫЕ НАСТРОЙКИ ===
LLM_API_KEY=your_api_key_here
PROJECT_PATH=

# === КОНФИГУРАЦИЯ КОНТЕНТА ===
# Поддерживаемые типы: blog_post, documentation, marketing, educational, social_media, email, press_release
CONTENT_TYPE=blog_post
# Поддерживаемые домены: technology, business, health, education, finance, lifestyle, science, arts
DOMAIN_TYPE=technology
# Целевая аудитория: general, professionals, beginners, experts, students, customers
TARGET_AUDIENCE=general
# Стиль контента: informative, persuasive, educational, entertaining, formal, casual, technical, creative
CONTENT_STYLE=informative
# Длина контента: short, medium, long, comprehensive
CONTENT_LENGTH=medium
# Основной язык: ukrainian, english, polish, multilingual
PRIMARY_LANGUAGE=ukrainian

# === НАСТРОЙКИ КАЧЕСТВА ===
# Стандарт качества: basic, standard, high, premium
QUALITY_STANDARD=high
# Уровень читабельности: simple, general, advanced, academic
READABILITY_LEVEL=general
# Уровень креативности: conservative, balanced, creative, highly_creative
CREATIVITY_LEVEL=balanced
# Формальность тона: formal, semi_formal, balanced, casual, informal
TONE_FORMALITY=balanced

# === SEO И ОПТИМИЗАЦИЯ ===
SEO_OPTIMIZATION=true
SEO_PRIMARY_KEYWORD=
SEO_SECONDARY_KEYWORDS=
SEO_META_DESCRIPTION=true
SEO_INTERNAL_LINKING=false

# === СТРУКТУРА КОНТЕНТА ===
# Структура: standard, listicle, how_to, case_study, comparison, storytelling
CONTENT_STRUCTURE=standard
INCLUDE_INTRODUCTION=true
INCLUDE_CONCLUSION=true
INCLUDE_CALL_TO_ACTION=true
# Стиль заголовков: descriptive, creative, seo_optimized, numbered
SECTION_HEADINGS_STYLE=descriptive

# === КУЛЬТУРНАЯ АДАПТАЦИЯ ===
CULTURAL_ADAPTATION=true
# Целевой регион: ukraine, poland, usa, eu, global
TARGET_REGION=ukraine
SECONDARY_LANGUAGES=polish,english
LOCAL_REFERENCES=true
CURRENCY_FORMAT=UAH
DATE_FORMAT=DD.MM.YYYY

# === ТВОРЧЕСКИЕ ПАРАМЕТРЫ ===
# Уровень юмора: none, minimal, moderate, high
HUMOR_USAGE=minimal
STORYTELLING_ELEMENTS=false
PERSONAL_ANECDOTES=false
# Голос бренда: neutral, authoritative, friendly, innovative, trustworthy
BRAND_VOICE=neutral

# === ТЕХНИЧЕСКИЕ ПАРАМЕТРЫ ===
# Формат вывода: markdown, html, plain_text, rich_text, json
OUTPUT_FORMAT=markdown
INCLUDE_METADATA=true
INCLUDE_WORD_COUNT=true
INCLUDE_READING_TIME=true
GENERATE_EXCERPT=true

# === LLM ПРОВАЙДЕРЫ И МОДЕЛИ ===
LLM_PROVIDER=qwen
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Модели для разных типов контента
LLM_BLOG_MODEL=qwen2.5-32b-instruct
LLM_DOCUMENTATION_MODEL=qwen2.5-coder-32b-instruct
LLM_MARKETING_MODEL=qwen2.5-32b-instruct
LLM_EDUCATIONAL_MODEL=qwen2.5-32b-instruct
LLM_SOCIAL_MODEL=qwen2.5-32b-instruct

# Альтернативные API ключи (опционально)
GEMINI_API_KEY=
OPENAI_API_KEY=
CLAUDE_API_KEY=

# === НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ ===
MAX_TOKENS=4096
TEMPERATURE=0.6
REQUEST_TIMEOUT=120
RETRY_ATTEMPTS=3

# === ВЕСОВЫЕ КОЭФФИЦИЕНТЫ ===
CONTENT_QUALITY_WEIGHTS=clarity:0.25,engagement:0.20,accuracy:0.20,seo:0.15,structure:0.10,creativity:0.10
AUDIENCE_PREFERENCE_WEIGHT=0.6
SEO_IMPORTANCE_WEIGHT=0.3
BRAND_CONSISTENCY_WEIGHT=0.1

# === ДОМЕННО-СПЕЦИФИЧНЫЕ ФАКТОРЫ ===
# Технологии
TECHNOLOGY_CONTENT_FACTORS=technical_accuracy,code_examples,latest_trends,practical_applications

# Бизнес
BUSINESS_CONTENT_FACTORS=roi_focus,case_studies,industry_insights,actionable_advice

# Здоровье
HEALTH_CONTENT_FACTORS=evidence_based,safety_disclaimers,expert_review,accessibility

# Образование
EDUCATION_CONTENT_FACTORS=learning_objectives,progressive_difficulty,interactive_elements,assessment_ready

# === RAG И KNOWLEDGE BASE ===
AGENT_NAME=universal_content_generator
KNOWLEDGE_TAGS=content-generation,copywriting,seo,agent-knowledge,pydantic-ai
KNOWLEDGE_DOMAIN=
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# === МЕЖАГЕНТНОЕ ВЗАИМОДЕЙСТВИЕ ===
ENABLE_TASK_DELEGATION=true
DELEGATION_THRESHOLD=medium
MAX_DELEGATION_DEPTH=3

# === МЕТРИКИ КАЧЕСТВА ===
MIN_CONTENT_QUALITY_SCORE=0.7
TARGET_ENGAGEMENT_SCORE=0.8
MAX_CONTENT_ERROR_RATE=0.05

# === ОТЛАДКА И ЛОГИРОВАНИЕ ===
DEBUG_MODE=false
LOG_LEVEL=INFO
SAVE_CONTENT_LOGS=true
CONTENT_OUTPUT_FORMAT=json

