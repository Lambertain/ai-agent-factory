# Universal NLP Content Architect Agent Configuration
# Конфигурация для универсального NLP архитектора контента

# ===== ОСНОВНЫЕ НАСТРОЙКИ LLM =====

# API ключ для основного провайдера (обязательно)
LLM_API_KEY=your_api_key_here

# Основные модели - Qwen на Dashscope (рекомендуется для кодирования)
LLM_PROVIDER=openai
LLM_MODEL=qwen2.5-coder-32b-instruct
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ===== COST-OPTIMIZED MODEL CONFIGURATION =====

# Сложные архитектурные задачи - Premium Qwen (только для глубокого анализа)
LLM_ARCHITECTURE_MODEL=qwen2.5-72b-instruct

# Специализированные задачи кодирования - Qwen Coder модели
LLM_CODING_MODEL=qwen2.5-coder-32b-instruct
LLM_TESTING_MODEL=qwen2.5-coder-7b-instruct

# Текстовые задачи - Ультра-дешевый Gemini 2.5 Flash-Lite ($0.10-0.40/1M)
LLM_PLANNING_MODEL=gemini-2.5-flash-lite
LLM_DOCS_MODEL=gemini-2.5-flash-lite
LLM_VALIDATION_MODEL=gemini-2.5-flash-lite
LLM_PROMPTS_MODEL=gemini-2.5-flash-lite

# Альтернативные API ключи для мульти-провайдерной настройки
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Флаги оптимизации стоимости
GEMINI_USE_BATCH_API=true
QWEN_ENABLE_CONTEXT_CACHE=true
ENABLE_SMART_ROUTING=true
AUTO_COMPRESS_CONTEXT=true

# ===== NLP НАСТРОЙКИ АГЕНТА =====

# Домен по умолчанию (psychology, astrology, tarot, numerology, coaching, wellness)
DEFAULT_DOMAIN=psychology

# Тип контента по умолчанию
DEFAULT_CONTENT_TYPE=diagnostic_test

# Целевой язык (ukrainian, russian, english)
DEFAULT_LANGUAGE=ukrainian

# Уровень сложности (basic, intermediate, advanced, expert)
DEFAULT_COMPLEXITY=intermediate

# Количество элементов контента (минимум 15)
DEFAULT_CONTENT_COUNT=16

# Длительность трансформационной программы (дни)
DEFAULT_TRANSFORMATION_DAYS=21

# ===== NLP ТЕХНИКИ КОНФИГУРАЦИЯ =====

# Методология NLP (basic, standard, advanced, ericksonian_full)
NLP_METHODOLOGY=ericksonian_full

# Количество NLP техник на элемент
NLP_TECHNIQUES_PER_ELEMENT=2

# Плотность Эриксоновских паттернов (minimal, optimal, maximum)
ERICKSONIAN_DENSITY=optimal

# Уровень VAK адаптации (basic, full, advanced)
VAK_ADAPTATION_LEVEL=full

# ===== ЯЗЫКОВЫЕ И КУЛЬТУРНЫЕ НАСТРОЙКИ =====

# Адаптация по возрасту
AGE_GROUP_ADAPTATION=true

# Культурная чувствительность
CULTURAL_SENSITIVITY=true

# Интеграция возрастного сленга
SLANG_INTEGRATION=true

# ===== ТРАНСФОРМАЦИОННЫЕ ПРОГРАММЫ =====

# Тип структуры программы (three_phase, gradual_change, skill_building)
PROGRAM_STRUCTURE_TYPE=three_phase

# Количество упражнений в день
DAILY_EXERCISES_COUNT=2

# Поддержка мультиформатного контента
MULTIFORMAT_SUPPORT=true

# ===== КАЧЕСТВО И БЕЗОПАСНОСТЬ =====

# Включить проверки безопасности
SAFETY_CHECKS_ENABLED=true

# Строгие этические рамки
ETHICAL_GUIDELINES_STRICT=true

# Валидация экспертизы домена
DOMAIN_EXPERTISE_VALIDATION=true

# Пороговое значение качества (0.0 - 1.0)
EXCELLENCE_THRESHOLD=0.85

# ===== ARCHON ИНТЕГРАЦИЯ =====

# ID проекта Archon для интеграции
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a

# Включить интеграцию с Archon RAG
ENABLE_ARCHON_RAG=true

# URL Archon сервера
ARCHON_SERVER_URL=http://localhost:3737

# Теги для поиска знаний в Archon
KNOWLEDGE_TAGS=universal-nlp,agent-knowledge,pydantic-ai,ericksonian-nlp

# Домен знаний (если специфичный)
KNOWLEDGE_DOMAIN=

# ===== DOMAIN-SPECIFIC НАСТРОЙКИ =====

# === Психология ===
PSYCHOLOGY_SCIENTIFIC_BASIS=true
PSYCHOLOGY_CLINICAL_SAFETY=true
PSYCHOLOGY_THERAPEUTIC_ETHICS=true

# === Астрология ===
ASTROLOGY_FREE_WILL_EMPHASIS=true
ASTROLOGY_EMPOWERMENT_FOCUS=true
ASTROLOGY_CULTURAL_RESPECT=true

# === Таро ===
TAROT_INTUITIVE_GUIDANCE=true
TAROT_PERSONAL_AGENCY=true
TAROT_SYMBOLIC_INTERPRETATION=true

# === Нумерология ===
NUMEROLOGY_MATHEMATICAL_ACCURACY=true
NUMEROLOGY_TRANSPARENT_CALCULATIONS=true
NUMEROLOGY_BALANCED_INTERPRETATIONS=true

# === Коучинг ===
COACHING_PROFESSIONAL_BOUNDARIES=true
COACHING_CLIENT_AUTONOMY=true
COACHING_GOAL_ORIENTATION=true

# === Велнес ===
WELLNESS_SAFETY_FIRST=true
WELLNESS_HOLISTIC_APPROACH=true
WELLNESS_MEDICAL_BOUNDARIES=true

# ===== LOGGING И МОНИТОРИНГ =====

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Логировать в файл
LOG_TO_FILE=true

# Путь к файлу логов
LOG_FILE_PATH=logs/universal_nlp_agent.log

# Включить метрики производительности
ENABLE_PERFORMANCE_METRICS=true

# ===== КЭШИРОВАНИЕ =====

# Включить кэширование ответов
ENABLE_CACHING=true

# Тип кэша (memory, redis, file)
CACHE_TYPE=file

# Время жизни кэша (секунды)
CACHE_TTL=3600

# URL Redis (если используется)
REDIS_URL=redis://localhost:6379

# ===== БЕЗОПАСНОСТЬ =====

# Секретный ключ для подписи токенов
SECRET_KEY=your_secret_key_here

# Максимальная длина запроса (символы)
MAX_REQUEST_LENGTH=50000

# Ограничение скорости запросов (запросов в минуту)
RATE_LIMIT_PER_MINUTE=60

# ===== РАЗРАБОТКА И ТЕСТИРОВАНИЕ =====

# Режим разработки
DEVELOPMENT_MODE=false

# Включить детальное логирование
DEBUG_MODE=false

# Использовать тестовую модель
USE_TEST_MODEL=false

# Путь к тестовым данным
TEST_DATA_PATH=tests/data/

# ===== ЭКСПОРТ И ИНТЕГРАЦИЯ =====

# Формат экспорта по умолчанию (json, yaml, markdown)
DEFAULT_EXPORT_FORMAT=json

# Включить экспорт аналитики
ENABLE_ANALYTICS_EXPORT=true

# Путь для сохранения результатов
RESULTS_SAVE_PATH=output/

# Включить интеграцию с внешними API
ENABLE_EXTERNAL_API_INTEGRATION=false

# ===== МУЛЬТИЯЗЫЧНОСТЬ =====

# Включить автоматическое определение языка
AUTO_LANGUAGE_DETECTION=true

# Языковая модель для перевода (если нужна)
TRANSLATION_MODEL=

# Словарь культурных адаптаций
CULTURAL_ADAPTATIONS_PATH=config/cultural_adaptations.yaml