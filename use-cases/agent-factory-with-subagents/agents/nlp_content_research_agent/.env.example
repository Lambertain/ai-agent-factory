# =============================================================================
# NLP Content Research Agent - Environment Configuration Template
# =============================================================================

# Core LLM Settings
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Model Selection (Cost-Optimized)
LLM_MODEL=qwen2.5-coder-32b-instruct

# Cost-Optimized Model Configuration
LLM_ARCHITECTURE_MODEL=qwen2.5-72b-instruct
LLM_CODING_MODEL=qwen2.5-coder-32b-instruct
LLM_TESTING_MODEL=qwen2.5-coder-7b-instruct
LLM_PLANNING_MODEL=gemini-2.5-flash-lite
LLM_DOCS_MODEL=gemini-2.5-flash-lite
LLM_VALIDATION_MODEL=gemini-2.5-flash-lite
LLM_PROMPTS_MODEL=gemini-2.5-flash-lite

# Alternative Providers (Optional)
GEMINI_API_KEY=your_gemini_key_here

# Research Domain Configuration
RESEARCH_DOMAIN=psychology
TARGET_AUDIENCE=general_public

# NLP Configuration
DEFAULT_NLP_TECHNIQUES=visual,auditory,kinesthetic
PATTERN_SHIFT_ENABLED=true
VIRAL_ANALYSIS_THRESHOLD=0.7

# Cost Optimization Settings
GEMINI_USE_BATCH_API=true
QWEN_ENABLE_CONTEXT_CACHE=true
ENABLE_SMART_ROUTING=true
AUTO_COMPRESS_CONTEXT=true

# Archon Integration
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a
ENABLE_TASK_DELEGATION=true
DELEGATION_THRESHOLD=medium

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true