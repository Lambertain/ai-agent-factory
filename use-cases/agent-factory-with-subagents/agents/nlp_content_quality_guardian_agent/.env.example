# =============================================================================
# NLP Content Quality Guardian Agent - Environment Configuration Template
# =============================================================================

# Core LLM Settings
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Cost-Optimized Model Configuration for Validation Tasks
LLM_VALIDATION_MODEL=qwen2.5-72b-instruct
LLM_SAFETY_MODEL=qwen2.5-coder-32b-instruct
LLM_REPORTING_MODEL=gemini-2.5-flash-lite
LLM_KNOWLEDGE_MODEL=gemini-2.5-flash-lite

# Alternative API Keys (Optional)
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here

# Validation Domain Settings
DEFAULT_VALIDATION_DOMAIN=universal
DEFAULT_CONTENT_TYPE=mixed_content

# Quality Thresholds
EXCELLENCE_THRESHOLD=90.0
GOOD_THRESHOLD=70.0
ACCEPTABLE_THRESHOLD=50.0

# PatternShift Methodology Validation
MIN_TEST_QUESTIONS=15
REQUIRE_LIFE_SITUATIONS=true
AVOID_CLINICAL_TERMS=true
REQUIRE_THREE_LEVEL_STRUCTURE=true
CRISIS_DAYS=21
STABILIZATION_DAYS=21
DEVELOPMENT_DAYS=14

# VAK and Content Requirements
REQUIRE_VAK_PERSONALIZATION=true
REQUIRE_MULTIFORMAT_CONTENT=true
REQUIRE_ANTI_REPETITION=true

# NLP Techniques Validation
REQUIRE_SCIENTIFIC_BASIS=true
REQUIRE_ETHICAL_SAFETY=true
REQUIRE_INFORMED_CONSENT=true
REQUIRE_CONTRAINDICATIONS=true
VALIDATE_ERICKSONIAN_PRINCIPLES=true
REQUIRE_UTILIZATION_APPROACH=true
REQUIRE_INDIRECT_METHODS=true

# Safety and Ethics Settings
ENABLE_SAFETY_SCANNING=true
ENABLE_ETHICS_VALIDATION=true
STRICT_SAFETY_MODE=true
AUTO_FLAG_MANIPULATION=true
AUTO_FLAG_PSEUDOSCIENCE=true

# Age Appropriateness
MIN_AGE_RESTRICTION=16
MAX_AGE_RESTRICTION=80
ENABLE_AGE_VALIDATION=true

# Multilingual and Cultural Settings
PRIMARY_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,uk,en
ENABLE_MULTILINGUAL_VALIDATION=true
ENABLE_CULTURAL_VALIDATION=true
CULTURAL_CONTEXTS=slavic,western,eastern

# RAG and Knowledge Settings
ENABLE_KNOWLEDGE_SEARCH=true
KNOWLEDGE_MATCH_COUNT=5
ENABLE_PATTERN_MATCHING=true

# Archon Integration
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a
ENABLE_ARCHON_INTEGRATION=true
ENABLE_TASK_DELEGATION=true

# Performance and Optimization
VALIDATION_TIMEOUT_MINUTES=10
MAX_CONTENT_LENGTH=100000
ENABLE_PARALLEL_VALIDATION=true

# Cost Optimization
ENABLE_SMART_ROUTING=true
GEMINI_USE_BATCH_API=true
QWEN_ENABLE_CONTEXT_CACHE=true
AUTO_COMPRESS_CONTEXT=true

# Reporting and Output Settings
GENERATE_DETAILED_REPORTS=true
INCLUDE_IMPROVEMENT_SUGGESTIONS=true
INCLUDE_EXAMPLES_IN_REPORTS=true
EXPORT_FORMAT=markdown
REPORT_INCLUDE_SCORES=true
REPORT_INCLUDE_METADATA=true
REPORT_INCLUDE_RECOMMENDATIONS=true

# Validation Workflow Settings
ENABLE_FOUR_STAGE_PROCESS=true
ENABLE_PROGRESSIVE_VALIDATION=true
ENABLE_AUTOMATED_CHECKS=true

# Validation Aspects Control
VALIDATE_METHODOLOGY_COMPLIANCE=true
VALIDATE_PSYCHOLOGICAL_CORRECTNESS=true
VALIDATE_NLP_TECHNIQUE_QUALITY=true
VALIDATE_ETHICAL_SAFETY=true
VALIDATE_SCIENTIFIC_VALIDITY=true
VALIDATE_CULTURAL_SENSITIVITY=true

# Debugging and Monitoring
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true
TRACK_VALIDATION_METRICS=true
ENABLE_PERFORMANCE_TRACKING=true
MAX_VALIDATION_TIME_SECONDS=300

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
ENABLE_RATE_LIMITING=true