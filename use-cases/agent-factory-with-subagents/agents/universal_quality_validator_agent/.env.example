# Universal Quality Validator Agent - Environment Variables Template
# Скопируйте этот файл в .env и заполните необходимые значения

# ===== ОСНОВНЫЕ НАСТРОЙКИ =====

# Домен проекта (web_development, mobile_development, api_services, fintech, healthcare, etc.)
QUALITY_VALIDATOR_PROJECT_DOMAIN=web_development

# Стандарт качества (iso_9001, agile, cmmi, ieee_830, custom)
QUALITY_VALIDATOR_QUALITY_STANDARD=iso_9001

# Уровень валидации (basic, standard, comprehensive, enterprise)
QUALITY_VALIDATOR_VALIDATION_LEVEL=standard

# ===== ПУТИ И ДИРЕКТОРИИ =====

# Путь к анализируемому проекту
QUALITY_VALIDATOR_PROJECT_PATH=/path/to/your/project

# Директория для сохранения отчетов
QUALITY_VALIDATOR_REPORTS_OUTPUT_DIR=./quality_reports

# Временная директория
QUALITY_VALIDATOR_TEMP_DIR=./temp

# ===== ПОРОГИ КАЧЕСТВА =====

# Минимальный порог качества кода (0.0-1.0)
QUALITY_VALIDATOR_MINIMUM_CODE_QUALITY_SCORE=0.8

# Минимальный порог безопасности (0.0-1.0)
QUALITY_VALIDATOR_MINIMUM_SECURITY_SCORE=0.9

# Минимальный порог производительности (0.0-1.0)
QUALITY_VALIDATOR_MINIMUM_PERFORMANCE_SCORE=0.7

# Минимальный порог покрытия тестами (0.0-1.0)
QUALITY_VALIDATOR_MINIMUM_TEST_COVERAGE=0.8

# ===== ВКЛЮЧЕНИЕ/ОТКЛЮЧЕНИЕ ИНСТРУМЕНТОВ =====

# Включить статический анализ кода
QUALITY_VALIDATOR_ENABLE_STATIC_ANALYSIS=true

# Включить сканирование безопасности
QUALITY_VALIDATOR_ENABLE_SECURITY_SCAN=true

# Включить тесты производительности
QUALITY_VALIDATOR_ENABLE_PERFORMANCE_TESTS=true

# Включить проверку зависимостей
QUALITY_VALIDATOR_ENABLE_DEPENDENCY_CHECK=true

# ===== ВНЕШНИЕ ИНТЕГРАЦИИ =====

# SonarQube (опционально)
QUALITY_VALIDATOR_SONAR_URL=http://localhost:9000
QUALITY_VALIDATOR_SONAR_TOKEN=your_sonar_token_here

# ===== AI МОДЕЛИ =====

# Основной API ключ для Qwen моделей (Alibaba Cloud)
LLM_API_KEY=your_qwen_api_key_here

# Google Gemini API ключ (для экономичных задач)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API ключ (опционально)
OPENAI_API_KEY=your_openai_api_key_here

# Провайдер AI модели (openai, gemini)
QUALITY_VALIDATOR_AI_MODEL_PROVIDER=openai

# Название AI модели
QUALITY_VALIDATOR_AI_MODEL_NAME=qwen2.5-coder-32b-instruct

# Включить AI рекомендации
QUALITY_VALIDATOR_ENABLE_AI_RECOMMENDATIONS=true

# ===== УВЕДОМЛЕНИЯ =====

# Каналы уведомлений (разделенные запятыми: email,slack,teams)
QUALITY_VALIDATOR_NOTIFICATION_CHANNELS=email

# Отправлять уведомления о критичных проблемах
QUALITY_VALIDATOR_ALERT_ON_CRITICAL_ISSUES=true

# ===== EMAIL НАСТРОЙКИ (если используются email уведомления) =====

# SMTP сервер
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Email получателей (разделенные запятыми)
NOTIFICATION_EMAIL_RECIPIENTS=dev-team@company.com,qa-team@company.com

# ===== SLACK НАСТРОЙКИ (если используются Slack уведомления) =====

# Slack Bot Token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Slack канал для уведомлений
SLACK_CHANNEL=#quality-alerts

# ===== TEAMS НАСТРОЙКИ (если используются Teams уведомления) =====

# Teams Webhook URL
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...

# ===== БАЗА ДАННЫХ (для хранения истории анализов) =====

# PostgreSQL (опционально)
DATABASE_URL=postgresql://user:password@localhost:5432/quality_db

# ===== REDIS (для кэширования) =====

# Redis URL (опционально)
REDIS_URL=redis://localhost:6379/0

# ===== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ДЛЯ ДОМЕНОВ =====

# Для WEB DEVELOPMENT
WEB_CHECK_ACCESSIBILITY=true
WEB_VALIDATE_SEO=true
WEB_PERFORMANCE_BUDGET_FCP=1.5
WEB_PERFORMANCE_BUDGET_LCP=2.5

# Для FINTECH
FINTECH_PCI_COMPLIANCE=true
FINTECH_FRAUD_DETECTION=true

# Для HEALTHCARE
HEALTHCARE_HIPAA_COMPLIANCE=true
HEALTHCARE_DATA_ENCRYPTION=AES-256

# ===== LOGGING =====

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=./logs/quality_validator.log

# ===== DEVELOPMENT НАСТРОЙКИ =====

# Режим разработки
DEBUG=false

# Включить подробный вывод
VERBOSE=false

# Dry run режим (только анализ без изменений)
DRY_RUN=false