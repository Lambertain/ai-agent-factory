# =============================================================================
# NLP Program Generator Agent - Environment Configuration Template
# =============================================================================

# Core LLM Settings
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Cost-Optimized Model Configuration
LLM_PROGRAM_GENERATION_MODEL=qwen2.5-coder-32b-instruct
LLM_NLP_TECHNIQUES_MODEL=qwen2.5-72b-instruct
LLM_HYPNOTIC_PATTERNS_MODEL=qwen2.5-coder-32b-instruct
LLM_PERSONALIZATION_MODEL=gemini-2.5-flash-lite
LLM_VALIDATION_MODEL=gemini-2.5-flash-lite

# Alternative API Keys (Optional)
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here

# Program Generation Settings
PROGRAM_DOMAIN=psychology
DEFAULT_SEVERITY_LEVEL=moderate
DEFAULT_VAK_TYPE=mixed
DEFAULT_CONTENT_FORMAT=both

# Personalization Features
ENABLE_VAK_ADAPTATION=true
ENABLE_PATTERN_SHIFT=true
ENABLE_HYPNOTIC_LANGUAGE=true
ENABLE_NLP_TECHNIQUES=true

# Technical Constraints
MAX_PROGRAM_DURATION=21
MAX_DAILY_TIME=35
MAX_LINES_PER_MODULE=300
ENABLE_MODULAR_STRUCTURE=true

# Cost Optimization
ENABLE_SMART_ROUTING=true
GEMINI_USE_BATCH_API=true
QWEN_ENABLE_CONTEXT_CACHE=true
AUTO_COMPRESS_CONTEXT=true

# RAG and Knowledge Search
ENABLE_KNOWLEDGE_SEARCH=true
KNOWLEDGE_MATCH_COUNT=5
ENABLE_WEB_RESEARCH=false

# Archon Integration
ARCHON_PROJECT_ID=c75ef8e3-6f4d-4da2-9e81-8d38d04a341a
ENABLE_TASK_DELEGATION=true
ENABLE_PROGRESS_TRACKING=true

# Safety and Ethics
ENABLE_SAFETY_CHECKS=true
ENABLE_ETHICS_VALIDATION=true
MIN_AGE_RESTRICTION=16
MAX_AGE_RESTRICTION=80

# Language Settings
DEFAULT_LANGUAGE=ru
DUAL_LANGUAGE_MODE=true

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true
TRACK_GENERATION_METRICS=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
ENABLE_RATE_LIMITING=true