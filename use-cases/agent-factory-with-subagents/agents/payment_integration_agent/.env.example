# Payment Integration Agent Environment Configuration

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# Primary LLM Provider Settings
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen2.5-coder-32b-instruct

# Cost-optimized model configuration for different payment tasks
LLM_PAYMENT_ANALYSIS_MODEL=qwen2.5-72b-instruct
LLM_PAYMENT_CODING_MODEL=qwen2.5-coder-32b-instruct
LLM_PAYMENT_DOCS_MODEL=gemini-2.5-flash-lite
LLM_WEBHOOK_MODEL=qwen2.5-coder-7b-instruct

# Alternative provider for cost-effective tasks
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Agent Configuration
# =============================================================================

# Agent Identity
AGENT_NAME=Payment Integration Agent
AGENT_VERSION=1.0.0

# Default Payment Settings
DEFAULT_PAYMENT_PROVIDER=stripe
DEFAULT_BUSINESS_MODEL=ecommerce
DEFAULT_CURRENCY=USD

# =============================================================================
# RAG and Knowledge Base
# =============================================================================

# Archon Knowledge Base Integration
ARCHON_URL=http://localhost:3737
KNOWLEDGE_BASE_ENABLED=true

# Default knowledge tags for payment integration
DEFAULT_KNOWLEDGE_TAGS=payment-integration,agent-knowledge,pydantic-ai

# =============================================================================
# Performance Settings
# =============================================================================

# LLM Performance
MAX_RETRIES=3
TIMEOUT_SECONDS=60
ENABLE_CACHING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# =============================================================================
# Development Settings
# =============================================================================

# Debug and Logging
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_VERBOSE_LOGGING=false

# Development Features
HOT_RELOAD=true
AUTO_SAVE=true

# =============================================================================
# Security Settings
# =============================================================================

# Input Validation
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=10000
SANITIZE_INPUTS=true

# Security Defaults
DEFAULT_ENCRYPTION_LEVEL=tls_1_2
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Payment Provider Configuration
# =============================================================================

# Stripe Configuration
STRIPE_API_VERSION=2024-06-20
STRIPE_WEBHOOK_TOLERANCE=300

# PayPal Configuration
PAYPAL_API_VERSION=v2
PAYPAL_SANDBOX_MODE=true

# Square Configuration
SQUARE_API_VERSION=2024-06-04
SQUARE_ENVIRONMENT=sandbox

# Razorpay Configuration
RAZORPAY_API_VERSION=v1

# Braintree Configuration
BRAINTREE_ENVIRONMENT=sandbox

# Adyen Configuration
ADYEN_API_VERSION=71
ADYEN_ENVIRONMENT=test

# =============================================================================
# Business Model Defaults
# =============================================================================

# E-commerce Defaults
ECOMMERCE_TAX_CALCULATION=true
ECOMMERCE_INVENTORY_SYNC=true
ECOMMERCE_ABANDONED_CART=true

# SaaS Defaults
SAAS_SUBSCRIPTION_MANAGEMENT=true
SAAS_USAGE_TRACKING=true
SAAS_DUNNING_MANAGEMENT=true

# Marketplace Defaults
MARKETPLACE_SPLIT_PAYMENTS=true
MARKETPLACE_VENDOR_ONBOARDING=true
MARKETPLACE_ESCROW=false

# Donation Defaults
DONATION_RECURRING_SETUP=true
DONATION_TAX_RECEIPTS=true
DONATION_ANONYMOUS_SUPPORT=true

# Gaming Defaults
GAMING_VIRTUAL_CURRENCY=true
GAMING_ANTI_FRAUD=true
GAMING_CHARGEBACK_PROTECTION=true

# P2P Defaults
P2P_KYC_VERIFICATION=true
P2P_TRANSACTION_LIMITS=true
P2P_REAL_TIME_PROCESSING=true

# =============================================================================
# Compliance Configuration
# =============================================================================

# PCI DSS
PCI_DSS_LEVEL=saq_a
ENABLE_PCI_SCANNING=true

# GDPR
GDPR_DATA_RETENTION_DAYS=2555
GDPR_ANONYMIZATION=true

# PSD2
PSD2_SCA_EXEMPTIONS=true
PSD2_TRANSACTION_RISK_ANALYSIS=true

# KYC/AML
KYC_VERIFICATION_LEVEL=standard
AML_SCREENING_ENABLED=false

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Metrics
METRICS_PROVIDER=prometheus
ENABLE_CUSTOM_METRICS=true

# Logging
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# Alerting
ALERT_WEBHOOK_URL=
ALERT_ON_FAILED_PAYMENTS=true
ALERT_ON_HIGH_DECLINE_RATE=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Testing Features
ENABLE_TEST_MODE=true
ENABLE_WEBHOOK_TESTING=true
WEBHOOK_TEST_ENDPOINT=https://webhook.site

# Test Cards (Stripe format)
TEST_CARD_NUMBERS=4242424242424242,5555555555554444,378282246310005

# =============================================================================
# Advanced Features
# =============================================================================

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_AI_FRAUD_DETECTION=true
ENABLE_SMART_ROUTING=false

# Performance Optimization
ENABLE_PAYMENT_OPTIMIZATION=true
ENABLE_CONVERSION_TRACKING=true
ENABLE_A_B_TESTING=false

# Integration Settings
WEBHOOK_SIGNATURE_VERIFICATION=true
API_VERSIONING_STRATEGY=header
ENABLE_IDEMPOTENCY=true

# =============================================================================
# File Paths
# =============================================================================

# Project Paths
PROJECT_ROOT=.
OUTPUT_DIRECTORY=./generated
BACKUP_DIRECTORY=./backups
LOGS_DIRECTORY=./logs

# =============================================================================
# Provider-Specific API Keys (Add as needed)
# =============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Square
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_APPLICATION_ID=your_square_application_id

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Braintree
BRAINTREE_MERCHANT_ID=your_braintree_merchant_id
BRAINTREE_PUBLIC_KEY=your_braintree_public_key
BRAINTREE_PRIVATE_KEY=your_braintree_private_key

# Adyen
ADYEN_API_KEY=your_adyen_api_key
ADYEN_MERCHANT_ACCOUNT=your_adyen_merchant_account
ADYEN_CLIENT_KEY=your_adyen_client_key

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# Primary Database
DATABASE_URL=postgresql://user:password@localhost:5432/payment_db
DATABASE_TYPE=postgresql

# Redis for Caching
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# Email & Notification Configuration (Optional)
# =============================================================================

# Email Provider
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Provider
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Push Notifications
PUSH_NOTIFICATION_PROVIDER=firebase
FIREBASE_SERVER_KEY=your_firebase_server_key

# =============================================================================
# Webhook Configuration
# =============================================================================

# Webhook Endpoints
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
WEBHOOK_PAYMENT_ENDPOINT=/payment-status
WEBHOOK_SUBSCRIPTION_ENDPOINT=/subscription-status
WEBHOOK_REFUND_ENDPOINT=/refund-status

# Webhook Security
WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret
WEBHOOK_TIMEOUT_SECONDS=30

# =============================================================================
# Environment-Specific Settings
# =============================================================================

# Environment
NODE_ENV=development
PYTHON_ENV=development
ENVIRONMENT=development

# Feature Flags
FEATURE_SUBSCRIPTION_V2=false
FEATURE_CRYPTO_PAYMENTS=false
FEATURE_INSTALLMENTS=false